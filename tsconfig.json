{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "removeComments": true, //编译去除注释
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*":["src/*"]
    },
  },
  "declaration": true,
  "include": [
    "src/*.ts",
    "src/*.d.ts",
    "src/components/*.ts",
    "src/components/**/*.vue",
    "src/components/**/*.tsx",
    "*.d.ts"
  ],
  "exclude": ["node_moduls/**"]
}
